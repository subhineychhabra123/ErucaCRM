@{
    ViewBag.Title = "ErucaCRM | Organisations";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section scripts {
    <script src="@Url.Content("~/Scripts/ErucaCRM.Admin/ErucaCRM.Admin.Organisations.js")" type="text/javascript"></script>
}

@section ReadyScripts
{
ErucaCRM.Admin.Organisations.pageLoad();
    }
<h2>Manage Organizations</h2>
<div class="buttoncontainer">
    <a id="ActiveInActive" class="button purple small"></a>
    @Html.ActionLink("Create User", "AddUser", null, new { @class = "button purple small" })

</div>
<div class="clear pad5px"></div>
<script type="text/html" id="UserList-template">
    <tr>


        <td>
            <a data-bind="attr: { href:CompanyDetail },text: CompanyName"></a>
        </td>
        <td>
            <div class="prod_title" data-bind="text: CreatedOn"></div>
        </td>
        <td>
            <input type="checkbox" class="userstatus" data-bind=" attr: { companyId: CompanyId }, clickBubble: false" onclick="viewModel.ActivateDeactivate(this)">
        </td>

    </tr>
</script>

<div class="tablecontainer  clear _roleselector">
    <table>
        <tr>
            <th class="text-align-center">Company Name
            </th>
            <th class="text-align-center">Created On
            </th>
            <th class="text-align-left">Action
                <span class="floatright">
                    <select id="DropDownListUserStatus">
                        <option value="Active" selected="selected"></option>
                        <option value="Inactive"></option>
                    </select>
                </span>
            </th>
        </tr>
        <tbody id="CompanyListData" data-bind="template: { name: 'UserList-template', foreach: UserList }">
        </tbody>
    </table>
    <div id="divNoRecord" class="feat_prod_box box_center" style="display: none">
    </div>
</div>


<div id="Pager"></div>


