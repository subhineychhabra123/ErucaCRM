                            <tr>
                                <td class="alignright">@Html.CultureSpecificDisplay(model => model.PageLabels.TotalAfterDiscount):</td>
                            </tr>
                            <tr>
                                <td class="alignright">@Html.CultureSpecificDisplay(model => model.PageLabels.Tax):</td>
                            </tr>
                            <tr>
