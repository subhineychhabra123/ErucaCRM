@using ErucaCRM.Web.Infrastructure;

@model ErucaCRM.Web.ViewModels.SalesOrderVM
@{
    ViewBag.Title = "ErucaCRM | Sales Order";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}


<h2>@Html.CultureSpecificDisplay(model => model.PageHeaderDetail)</h2>

<div class="buttoncontainer">
    @if (Request.QueryString["retrunurl"] != null)
    {
         @Html.ActionLink(@Html.CultureSpecificDisplay(model => model.ButtonBack), "", null, new { @class = "button purple small _back" })
    }
    else
    {
         @Html.ActionLink(@Html.CultureSpecificDisplay(model => model.ButtonBack), "SaleOrders", "User",null, new { @class = "button purple small" })
    }
   
    @if (User.IsInRole(String.Concat(ErucaCRM.Utility.Constants.MODULE_SALESORDER, ErucaCRM
        .Utility.Constants.PERMISSION_EDIT)))
    {
        @Html.ActionLink(@Html.CultureSpecificDisplay(model => model.ButtonEdit), "EditSalesOrder", new { @id_encrypted = Model.SalesOrderId }, new { @class = "button purple small _backtohere" })
    }
</div>
