                    @Html.DisplayFor(modelItem => item.AssociatedProduct.Quantity)
                </td>
                <td class="vartical-align">
                    @Html.DisplayFor(modelItem => item.AssociatedProduct.UnitPrice)
                </td>
                <td>

                    <table>
                        <tbody>
                            <tr>
                                <td class="vartical-align">
                                    <div class=" "><span id="value_txtListPrice1">@Html.DisplayFor(modelItem => item.AssociatedProduct.ListPrice)</span></div>
