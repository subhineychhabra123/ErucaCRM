                            </tr>
                            <tr>
                                <td>
                                    <div class="text-align-right padR5px">@Html.DisplayFor(modelItem => item.AssociatedProduct.TotalDiscount)</div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="text-align-right padR5px">@Html.DisplayFor(modelItem => item.AssociatedProduct.TotalAfterDiscount)</div>
                                </td>
                            </tr>
                            <tr>
