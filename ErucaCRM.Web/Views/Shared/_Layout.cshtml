                    <p>@LayoutFooter.Features</p>
                    <ul class="footer-nav1">
                        <li><a data-container="_containerLead" data-tab="_tabLead" href="/Feature#Lead" >@LayoutFooter.FeatureLeadsByStages</a></li>
                        <li><a data-container="_containerTag" data-tab="_tabTag" href="/Feature#Tag"@DateTime.Now.Millisecond.ToString()>@LayoutFooter.FeatureTagging</a></li>
                        @* <li><a href="#">@LayoutFooter.FeatureDocumentsLibrary</a></li>*@
                        <li><a data-container="_containerContact" data-tab="_tabContact" href="/Feature#ContactManagement">@LayoutFooter.FeatureContactManagement</a></li>
                        <li><a data-container="_containerCase" data-tab="_tabCase" href="/Feature#CustomerRelationship">@LayoutFooter.FeatureCustomerRelationship</a></li>
                        <li><a data-container="_containerOther" data-tab="_tabOther" href="/Feature#MobileCRM">@LayoutFooter.FeatureMobileCRM</a></li>
                        @*<li><a href="#">@LayoutFooter.FeatureWeChatIntegration</a></li>*@
                        <div class="clear"></div>
                    </ul>
                </div>
                @*<div class="lastest1">
                    <p>@LayoutFooter.Resources</p>
