@using ErucaCRM.Web.ViewModels;
@using ErucaCRM.Utility;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/content/images/favicon.ico")"/>
    @*    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/main.css")" />*@

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/OuterLayoutCss.css")" />


    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/knockout-3.0.0.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/ErucaCRM.Framework/ErucaCRM.Framework.Core.js")"></script>
    <script type="text/javascript" src="~/Scripts/ErucaCRM.Messages/@CommonFunctions.GetCurrentCulturScript()?t=@DateTime.Today.Ticks"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <meta title="@ViewBag.Title" />
    <meta  name="description" content="@ViewBag.MetaTag" />
</head>
<body>
    <div class="b-g">
        <div class="body-wrapper">
            <div class="header">
                <div class="img-holder">
                    <a href="@Url.Action("Home", "Site")">
                        <img src="content/images/@CommonFunctions.GetCurrentCulturLoginLogo()" alt="" title="logo" /></a>
                </div>
                <div class="nav">
                    <ul>
                        <li class="homes selected"><a href="/Home" menu="Home">
                            <img class="home" alt="" src="content/images/home.png"></a></li>
                        <li><a menu="Feature" href="@Url.Action("Feature", "Site")">@LayoutMenus.FeaturesBenefits</a></li>
                        <li><a menu="Aboutus" href="@Url.Action("AboutUs", "Site")">@LayoutMenus.AboutUs</a></li>
                        <li><a menu="MobileCRM" href="@Url.Action("MobileCRM", "Site")">@LayoutMenus.MobileCRM</a></li>
                        <li class="border-none"><a menu="Login" href="@Url.Action("Login", "Site")">@LayoutMenus.PricingAndSignIn</a></li>
                    </ul>


                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>

    <div class="navbar">
        <div class="nested wrapper">
            <form class="left-col">
                @Html.Raw(LayoutHelper.GetActiveCultureIcons())

                <input type="text" placeholder="@LayoutHelper.SearchWaterMark" />
                <a href="javascript:void(0)" class="search">
                    <img src="content/images/search.png" alt="" title="@LayoutHelper.SearchWaterMark" /></a>
                <a href="/Register" class="sign-up">@LayoutHelper.ButtonSignUp</a>
                <a href="@Url.Action("Login", "Site")" class="log-in">@LayoutHelper.ButtonLogin</a>
            </form>
            <div class="clear"></div>
        </div>
    </div>

    <div class="content-wrapper">

        @RenderBody()

    </div>






    <div class="footer">
        <div class="footer-section wrapper">
            <div class="last-section">
                <ul class="footer-nav">
                    <li><a href="/Home" menu="Home" class="active">@LayoutMenus.Home</a></li>
                    <li><a menu="Feature" href="@Url.Action("Feature", "Site")">@LayoutMenus.FeaturesBenefits</a></li>
                    <li><a menu="Aboutus" href="@Url.Action("AboutUs", "Site")">@LayoutMenus.AboutUs</a></li>
                    <li><a menu="MobileCRM" href="@Url.Action("MobileCRM", "Site")">@LayoutMenus.MobileCRM</a></li>
                    @* <li><a menu="Contactus" href="@Url.Action("ContactUs", "Site")">@LayoutMenus.ContactUs</a></li>*@
                    <li><a menu="Login" href="@Url.Action("Login", "Site")">@LayoutMenus.PricingAndSignIn</a></li>

                </ul>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
            <div class="latest">
